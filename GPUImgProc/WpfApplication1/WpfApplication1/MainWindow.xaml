<Window x:Class="WpfApplication1.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WpfApp="clr-namespace:WpfApplication1"
    Title="Window1" Height="1080" Width="1920" Loaded="WindowLoaded" WindowStyle="None" WindowState="Maximized" Cursor="None">
    <Window.Resources>
        <WpfApp:ImageConverter x:Key="imageConverter"/>
            </Window.Resources>
    <Grid>
        <Image Name="MainImage" Source="{Binding Path=DisplayImage, Converter={StaticResource imageConverter}}"/>
    </Grid>
</Window>
