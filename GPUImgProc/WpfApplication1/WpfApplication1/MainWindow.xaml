<Window x:Class="WpfApplication1.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WpfApp="clr-namespace:WpfApplication1"
    Title="Window1" Height="300" Width="300" Loaded="WindowLoaded">
    <Window.Resources>
        <WpfApp:ImageConverter x:Key="imageConverter"/>
            </Window.Resources>
    <Grid>
        <Image Name="MainImage" Source="{Binding Path=DisplayImage, Converter={StaticResource imageConverter}}"/>
    </Grid>
</Window>
